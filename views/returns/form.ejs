<%- include('../partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Richiedi un Reso</h2>
                
                <% if (error) { %>
                    <div class="alert alert-danger">
                        <%= error %>
                    </div>
                <% } %>

                <form action="/returns/verify" method="POST">
                    <div class="mb-3">
                        <label for="orderId" class="form-label">Numero Ordine</label>
                        <input type="text" class="form-control" id="orderId" name="orderId" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="email" class="form-label">Email utilizzata nell'ordine</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Verifica Ordine</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 